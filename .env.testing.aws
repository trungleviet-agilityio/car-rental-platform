# Testing Environment with Real AWS Services
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/carrentals?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-testing
JWT_EXPIRES_IN=1h

# Service Providers - Using Real AWS Services for Testing
NOTIFICATION_PROVIDER=twilio     # Real Twilio for SMS
AUTH_PROVIDER=cognito           # Real AWS Cognito
WORKFLOW_PROVIDER=step-functions # Real AWS Step Functions

# AWS Configuration - Real AWS Resources
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-real-aws-access-key
AWS_SECRET_ACCESS_KEY=your-real-aws-secret-key

# AWS Step Functions - Real State Machine
AWS_STEP_FUNCTIONS_ONBOARDING_ARN=arn:aws:states:us-east-1:YOUR_ACCOUNT:stateMachine:user-onboarding

# AWS Lambda Functions for Step Functions Workflow
AWS_LAMBDA_PHONE_VERIFICATION=user-onboarding-phone-verification
AWS_LAMBDA_CHECK_PROFILE=user-onboarding-check-profile
AWS_LAMBDA_START_KYC=user-onboarding-start-kyc
AWS_LAMBDA_KYC_APPROVED=user-onboarding-kyc-approved
AWS_LAMBDA_KYC_REJECTED=user-onboarding-kyc-rejected
AWS_LAMBDA_KYC_TIMEOUT=user-onboarding-kyc-timeout
AWS_LAMBDA_ERROR_HANDLER=user-onboarding-error-handler

# AWS Cognito - Real User Pool
AWS_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
AWS_COGNITO_USER_POOL_CLIENT_ID=your-cognito-client-id
AWS_COGNITO_REGION=us-east-1

# AWS SNS Topics for Notifications
AWS_SNS_REGION=us-east-1
AWS_SNS_USER_NOTIFICATIONS_TOPIC=arn:aws:sns:us-east-1:YOUR_ACCOUNT:user-notifications
AWS_SNS_ADMIN_ALERTS_TOPIC=arn:aws:sns:us-east-1:YOUR_ACCOUNT:admin-alerts

# AWS SES for Email Notifications
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@your-domain.com
AWS_SES_SUPPORT_EMAIL=support@your-domain.com

# AWS S3 for Document Storage
AWS_S3_REGION=us-east-1
AWS_S3_DOCUMENTS_BUCKET=your-carrentals-documents
AWS_S3_AVATARS_BUCKET=your-carrentals-avatars

# Twilio Configuration - Real Twilio Account
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-real-twilio-auth-token
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Application Configuration
APP_PORT=3000
APP_NAME="CarRental Platform - AWS Testing"
APP_VERSION=1.0.0
