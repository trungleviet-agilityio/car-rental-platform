# =================================================================
# Car Rental Platform - Environment Configuration
# =================================================================

# =================
# APPLICATION CONFIG
# =================
NODE_ENV=development
APP_PORT=3000
APP_NAME="CarRental Platform - Development"
APP_VERSION=1.0.

# =================
# DATABASE CONFIG
# =================
DB_DISABLE=false             # false => PostgreSQL (local & dev); true => in-memory SQLite (testing only)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=car_rental
DB_SSL=false

# Prisma requires this for migrations (build from individual config)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/car_rental"

# =================
# AWS CONFIG
# =================
AWS_REGION=ap-southeast-1
AWS_PROFILE=default

# =================
# Cognito Config
# =================
USER_POOL_ID=
USER_POOL_CLIENT_ID=

# =================
# S3 CONFIG
# =================
S3_BUCKET_NAME=

# =================
# Step Function Config
# =================
KYC_SFN_ARN=
AWS_STEP_FUNCTIONS_ONBOARDING_ARN=

# =================
# Lambda Config
# =================
LAMBDA_FUNCTION_NAME=
LAMBDA_FUNCTION_NAME_KYC_STATUS=
LAMBDA_FUNCTION_NAME_KYC_STATUS_FAILED=

# =================
# Lambda Functions for Onboarding Workflow
# =================
AWS_LAMBDA_PHONE_VERIFICATION=user-onboarding-phone-verification
AWS_LAMBDA_CHECK_PROFILE=user-onboarding-check-profile
AWS_LAMBDA_START_KYC=user-onboarding-start-kyc
AWS_LAMBDA_KYC_APPROVED=user-onboarding-kyc-approved
AWS_LAMBDA_KYC_REJECTED=user-onboarding-kyc-rejected
AWS_LAMBDA_KYC_TIMEOUT=user-onboarding-kyc-timeout
AWS_LAMBDA_ERROR_HANDLER=user-onboarding-error-handler

# =================
# SES CONFIG
# =================
SES_REGION=ap-southeast-1
SES_FROM_ADDRESS=no-reply@carrentalplatform.com
SES_FROM_NAME=Car Rental Platform

# =================
# TWILIO CONFIG
# =================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_MESSAGING_SERVICE_SID=

# =================
# PAYMENTS (Current just Mocked Stripe)
# =================
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# =================
# GOOGLE MAPS CONFIG
# =================
GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_GEOCODING_API_KEY=
GOOGLE_MAPS_DIRECTIONS_API_KEY=

# =================
# SECURITY & CORS
# =================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGIN=*

# =================
# DEBUG
# =================
DEBUG=false
DEBUG_INCLUDE_OTP=true       # If unset, defaults to true unless NODE_ENV=production

# =================
# Rate Limiting
# =================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# =================
# Service Provider Selection
# =================
WORKFLOW_PROVIDER=step-functions  # Use AWS Step Functions for production
AUTH_PROVIDER=cognito             # Use AWS Cognito for production
NOTIFICATION_PROVIDER=twilio      # Use Twilio for SMS in production